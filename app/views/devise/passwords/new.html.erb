<div class="access">
  <div class="access__form rounded-box">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h2 class="form__heading">Forgot your password?</h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <%= f.submit "Send me reset password instructions", :class => "btn btn--cta" %>
    <% end %>

  </div>
  <div class="access__register">
    <%= render "devise/shared/links" %>
  </div>
</div>

