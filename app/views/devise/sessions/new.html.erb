<div class="access">
  <div class="access__form rounded-box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "form" }) do |f| %>
      <h2 class="form__heading">Log in</h2>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field form-field--checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit "Log in",  :class => "btn btn--cta" %>
    <% end %>
  </div>
  <div class="access__register">
    <%= render "devise/shared/links" %>
  </div>
</div>
